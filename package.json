{
    "name": "subtle-brackets",
    "displayName": "Subtle Match Brackets",
    "description": "Underlined matching brackets and more",
    "version": "2.1.1",
    "publisher": "rafamel",
    "author": {
        "name": "rafamel"
    },
    "icon": "icon_256.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "bracket",
        "brackets",
        "match",
        "matching"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rafamel/subtle-brackets"
    },
    "bugs": {
        "url": "https://github.com/rafamel/subtle-brackets/issues"
    },
    "license": "SEE LICENSE IN LICENSE",
    "engines": {
        "vscode": "^1.12.0"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Subtle Brackets",
            "properties": {
                "subtleBrackets.parse": {
                    "type": "boolean",
                    "default": true,
                    "description": "If true, the document will be parsed so brackets within strings don't trigger the decoration"
                },
                "subtleBrackets.disableNative": {
                    "type": "boolean",
                    "default": true,
                    "description": "Permanently disable the native matchBrackets"
                },
                "subtleBrackets.bracketPairs": {
                    "type": "array",
                    "default": [
                        "{}",
                        "[]",
                        "()"
                    ],
                    "description": "Pairs of matching brackets"
                },
                "subtleBrackets.styles": {
                    "type": "object",
                    "default": {
                        "global": {
                            "borderWidth": "1px",
                            "borderStyle": "none none solid none"
                        }
                    },
                    "description": "Custom styles for matching brackets"
                }
            }
        }
    },
    "scripts": {
        "precommit": "MSG='Committing in:' npm run validate",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "tslint ./src/**/*",
        "fix": "prettier --write \"**/*.{js,ts,scss,md}\"",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "validate": "run-s fix lint && npm run outdated",
        "update": "npm update --save/save-dev && npm outdated",
        "outdated": "if !(npm outdated) && [ -n \"$MSG\" ]; then printf \"\n\" && for i in `seq 0 8`; do sleep 1 && printf '\r%s %2d' \"$MSG\" \"$((8-i))\"; done; fi;",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^10.0.3",
        "husky": "^0.14.3",
        "mocha": "^5.1.1",
        "npm-run-all": "^4.1.2",
        "prettier": "^1.12.1",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.12.0",
        "tslint-language-service": "^0.9.6",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "lodash.clonedeep": "^4.5.0",
        "prism-languages": "^0.3.3",
        "prismjs": "^1.6.0",
        "timeout-as-promise": "^1.0.0"
    }
}
